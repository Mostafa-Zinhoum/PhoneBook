@section Scripts {


    <script src="http://ajax.microsoft.com/ajax/jquery/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>

        $(document).ready(function () {
            $("#Birthday").val(moment(new Date()).format('YYYY-MM-DD'));
            Jobload();
            Govload();
        });


        function Jobload() {
            $.ajax({
                url: "/phoneBook/jobs",
                type: "Get",
                success: function (data) {
                    $('#JobId').html('');
                    var options = '';
                    options += '<option value="null">Select</option>';
                    for (var i = 0; i < data.length; i++) {
                        options += '<option value="' + data[i].id + '">' + data[i].name + '</option>';
                    }
                    $('#JobId').append(options);
                },
                error: function (result) {
                    alert("Error");
                }
            });
        }
        function Govload() {
            $.ajax({
                url: "/phoneBook/governorates",
                type: "Get",
                success: function (data) {
                    $('#GovId').html('');
                    var options = '';
                    options += '<option value="null">Select</option>';
                    for (var i = 0; i < data.length; i++) {
                        options += '<option value="' + data[i].id + '">' + data[i].name + '</option>';
                    }
                    $('#GovId').append(options);
                },
                error: function (result) {
                    alert("Error");
                }
            });
        }


        function FillData() {
            var param = $('#GovId').val();
            $.ajax({
                url: "/phoneBook/centers",
                type: "POST",
                data: { "governorateId": param },
                success: function (data) {
                    $('#centerId').html('');
                    var options = '';
                    options += '<option value="Select">Select</option>';
                    for (var i = 0; i < data.length; i++) {
                        options += '<option value="' + data[i].id + '">' + data[i].name + '</option>';
                    }
                    $('#centerId').append(options);
                },
                error: function (result) {
                    alert("Error");
                }
            });
        }

        async function AJAXSubmit(oFormElement) {
            var resultElement = oFormElement.elements.namedItem("result");
            const formData = new FormData(oFormElement);

            try {
                const response = await fetch(oFormElement.action, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) { //response.ok
                    debugger;
                    const data = await response.json();
                    console.log(data);
                    if (data.success) {
                        toastr.success(data.message);

                        setTimeout(function () {
                            window.location.href = '/phoneBook/index';
                        }, 1000);


                    }
                    else {
                        toastr.error(data.message);
                    }

                }
                resultElement.value = 'Result: ' + response.status + ' ' +
                    response.statusText;

            } catch (error) {
                console.error('Error:', error);
            }
        }

        function openCity(evt, name) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(name).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();

    </script>



}
 